# ============================================
# BEGA Prediction Market L2 Configuration
# ============================================

# ---------------------------------------------
# L1 Configuration (Ethereum Sepolia Testnet)
# ---------------------------------------------
L1_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
L1_CHAIN_ID=11155111

# ---------------------------------------------
# L2 Configuration
# ---------------------------------------------
L2_CHAIN_ID=12345678
L2_BLOCK_TIME=2

# ---------------------------------------------
# Celestia DA Configuration
# ---------------------------------------------
# Celestia Light Node RPC URL
# For Docker Desktop (Mac/Windows): http://host.docker.internal:26658
# For Linux: http://172.17.0.1:26658 or your host IP
DA_SERVER_URL=http://host.docker.internal:26658

# ---------------------------------------------
# Private Keys (WITHOUT 0x prefix)
# ---------------------------------------------
# IMPORTANT: Never commit these keys to git!
# The .gitignore file should exclude .env

# Deployer key - needs L1 ETH for deploying contracts
DEPLOYER_PRIVATE_KEY=YOUR_DEPLOYER_PRIVATE_KEY_WITHOUT_0X

# Sequencer key - generates L2 blocks
SEQUENCER_PRIVATE_KEY=YOUR_SEQUENCER_PRIVATE_KEY_WITHOUT_0X

# Batcher key - needs L1 ETH for posting batches
BATCHER_PRIVATE_KEY=YOUR_BATCHER_PRIVATE_KEY_WITHOUT_0X

# Proposer key - needs L1 ETH for posting state roots
PROPOSER_PRIVATE_KEY=YOUR_PROPOSER_PRIVATE_KEY_WITHOUT_0X

# Gas Oracle Bot Operator key - needs L1 ETH for updating gas config
OPERATOR_PRIVATE_KEY=YOUR_OPERATOR_PRIVATE_KEY_WITHOUT_0X

# ---------------------------------------------
# Admin Addresses (WITH 0x prefix)
# ---------------------------------------------
# All admin addresses (can be the same address)
ADMIN_ADDRESS=0xYourAdminAddressHere
FINAL_SYSTEM_OWNER=0xYourAdminAddressHere
PROXY_ADMIN_OWNER=0xYourAdminAddressHere

# Fee recipient addresses
BASE_FEE_VAULT_RECIPIENT=0xYourFeeReceiverAddress
L1_FEE_VAULT_RECIPIENT=0xYourFeeReceiverAddress
SEQUENCER_FEE_VAULT_RECIPIENT=0xYourFeeReceiverAddress

# ---------------------------------------------
# Contract Addresses (filled after deployment)
# ---------------------------------------------
# L1 Custom Gas Token (ERC-20) - must be deployed before L2 deployment
CUSTOM_GAS_TOKEN_ADDRESS=0xYOUR_L1_ERC20_TOKEN_ADDRESS

# L2 Output Oracle Proxy - generated by op-deployer
L2OO_ADDRESS=

# SystemConfig Contract - generated by op-deployer (for Gas Oracle Bot)
SYSTEM_CONFIG_ADDRESS=

# Batch Inbox Address - generated by op-deployer
BATCH_INBOX_ADDRESS=

# ---------------------------------------------
# Docker Image Tags
# ---------------------------------------------
OP_GETH_TAG=latest
OP_NODE_TAG=latest
OP_BATCHER_TAG=latest
OP_PROPOSER_TAG=latest

# ---------------------------------------------
# Gas Oracle Bot Configuration
# ---------------------------------------------
# Update threshold percentage (e.g., 5.0 = 5%)
GAS_UPDATE_THRESHOLD=5.0

# Safety margin multiplier (e.g., 1.1 = 10% margin)
GAS_SAFETY_MARGIN=1.1

# Check interval in seconds
GAS_CHECK_INTERVAL=30

# API Keys for price feeds (optional)
COINGECKO_API_KEY=
BINANCE_API_KEY=

# ---------------------------------------------
# Optional: Etherscan API for contract verification
# ---------------------------------------------
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
